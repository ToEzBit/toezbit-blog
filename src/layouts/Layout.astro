---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import LeftSidebar from "../components/LeftSidebar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>ToEzBit Blog</title>
    <script src="/src/lib/toggle-sidebar.js" defer></script>
  </head>
  <body class="bg-background flex flex-col">
    <div class="flex flex-1 overflow-hidden">
      <LeftSidebar defaultOpen={false} />
      <div class="flex-1 overflow-y-auto max-h-screen">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "NerdFont", sans-serif;
    font-weight: 400;
  }
</style>
