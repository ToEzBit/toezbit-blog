---
import { Icon } from "astro-icon/components";

const isHomePage = Astro.url.pathname === "/";
---

<header class="bg-secondary py-4 px-12 flex justify-between">
  <div>
    <!-- INFO: hide when on home page -->
    {!isHomePage && <p class="text-primary text-4xl font-bold">TOEZBIT</p>}
  </div>
  <a href="https://github.com/ToEzBit">
    <Icon name="github" class="text-2xl text-primary cursor-pointer" />
  </a>
</header>
